<h3>Create a New Task:</h3>

<%= form_for [@task, @group.tasks.new], url: tasks_path(@task) do |f| %>
	<div><%= f.hidden_field :group_id,  value: @group.id %></div>
	<div>Task: <%= f.text_field :task %></div>
	<div>Date Due: <%= f.date_field :due_date %></div>
	<div><%= f.select :priority, [["high", 3], ["medium", 2], ["low", 1]]%></div>
    <%= f.submit "create" %>
<% end %>
