<head>
  <title>TaskMate</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="apple-mobile-web-app-capable" content="yes">
   <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
  <link href='https://fonts.googleapis.com/css?family=Open+Sans:700|Lato:400' rel='stylesheet' type='text/css'>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>  
<body class="welcome-body">

    <div class="container main-page">
      <div class="row">
        <h1 class="main-splash-logo center-align">TaskMate</h1>
        <h5 class="center-align slogan">A place to share tasks.</h5>
      </div>
      <div="buttons">
        <div class="container center-align">
        <div class="row buttons">
            <a href="/users/sign_up">
              <button class="waves-effect waves-light btn blue-grey lighten-3 sign-buttons">Sign Up</button>
            </a>
          </div>
        <div class="row buttons">
          <a href="/users/sign_in" class="button-text">
            <button class="waves-effect waves-light btn teal lighten-2 sign-buttons">Log In</button>
          </a>
        </div>
        <div class="row buttons">
          <%= form_for(User.new, url: user_session_path(@user)) do |f| %>
            <%= f.hidden_field :email, value: "taskmate.guest@gmail.com" %>
            <%= f.hidden_field :password, value: "000000" %>
            <%= f.submit "Guest", class: "waves-effect waves-light btn cyan lighten-1 sign-buttons" %>
          <% end %>
        </div>
        </div>

      </div>
    </div>


</body>